{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "-v"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "--cov=src",
                "--cov-report=html",
                "--cov-report=term",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "ruff",
                "check",
                "src/",
                "tests/"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Type Check",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "mypy",
                "src/"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "black",
                "src/",
                "tests/"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Train Model",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "src.cli",
                "train",
                "--config",
                "configs/default.yaml"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Evaluate Model",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "src.cli",
                "evaluate",
                "--config",
                "configs/default.yaml",
                "--checkpoint",
                "checkpoints/best.pt"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Preprocess Data",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "src.cli",
                "preprocess",
                "--config",
                "configs/default.yaml"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Secure Cleanup (Preview)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/secure_cleanup.py",
                "--preview"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Auto Purge GPT/Copilot Traces",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "scripts/secure_cleanup.py",
                "--force"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}